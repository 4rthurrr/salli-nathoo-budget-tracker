@model Transaction
@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-exclamation-triangle me-2"></i>Delete Transaction</h4>
            </div>
            <div class="card-body">
                <p class="text-danger">Are you sure you want to delete this transaction?</p>
                
                <div class="card bg-light">
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Date:</dt>
                            <dd class="col-sm-8">@Model.Date.ToString("MMMM dd, yyyy")</dd>
                            
                            <dt class="col-sm-4">Description:</dt>
                            <dd class="col-sm-8">@Model.Description</dd>
                            
                            <dt class="col-sm-4">Category:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-secondary">@Model.Category.Name</span>
                            </dd>
                            
                            <dt class="col-sm-4">Type:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Type == TransactionType.Income)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-arrow-up me-1"></i>Income
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-arrow-down me-1"></i>Expense
                                    </span>
                                }
                            </dd>
                            
                            <dt class="col-sm-4">Amount:</dt>
                            <dd class="col-sm-8">
                                <span class="fw-bold @(Model.Type == TransactionType.Income ? "text-success" : "text-danger")">
                                    @(Model.Type == TransactionType.Income ? "+" : "-")Rs. @Model.Amount.ToString("N2")
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="mt-3">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Delete Transaction
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
